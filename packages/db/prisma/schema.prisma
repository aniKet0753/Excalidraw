
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id   String @id @default(uuid())
  name String
  email String @unique
  password String
  photo String?
  rooms Room[] //relation to Room model here one to many relationship defiend as one user can have multiple rooms
  chats Chat[] //relation to Chat model here one to many relationship defiend as one user can have multiple chats
  }

model Room {
  id Int @id @default(autoincrement())
  slug String @unique
  createdat DateTime @default(now())
  adminId String
  admin User @relation(fields: [adminId], references: [id])//relation to User model as a forgen key
  chats Chat[] //relation to Chat model here one to many relationship defiend as one room can have multiple chats
}

model Chat {
  id Int @id @default(autoincrement())
  message String
  roomId Int
  userId String
  room Room @relation(fields: [roomId], references: [id])//relation to Room model as a forgen key
  user User @relation(fields: [userId], references: [id])//relation to
}
